{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["lib"],
  "exclude": ["node_modules", "dist", "test", "wallets", "templates"]
}

